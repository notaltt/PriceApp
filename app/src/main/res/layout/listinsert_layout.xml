<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/itemNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:hint="item name"/>

    <EditText
        android:id="@+id/storeNameList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="text"
        android:hint="store name"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/itemNameList"/>

    <EditText
        android:id="@+id/quantityList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="number"
        android:hint="quantity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/storeNameList"/>

    <EditText
        android:id="@+id/priceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:inputType="numberDecimal"
        android:hint="price"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/quantityList"/>

</RelativeLayout>