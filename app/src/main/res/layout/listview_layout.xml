<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:id="@+id/serial_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="8dp"
            android:text="serial_number"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="38dp"
            android:text="item name"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="73dp"
            android:text="store_name"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/net_weight"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-60dp"
            android:layout_marginEnd="12dp"
            android:text="net weight"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/quantity2"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="22dp"
            android:text="quantity"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/price2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="45dp"
            android:text="price"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/serialNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Serial Number:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/itemNameText"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="38dp"
            android:text="Item name:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="116dp"
            android:text="Category:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/storeNameText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="75dp"
            android:text="Store Name:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="category"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/netWeightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="114dp"
            android:text="Net Weight:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="116dp"
            android:text="Quantity:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/priceText"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="109dp"
            android:text="Price:"
            android:textStyle="normal|bold" />

</RelativeLayout>